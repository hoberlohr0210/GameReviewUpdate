@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/ga.jpeg" />
            <div class="carousel-caption" role="option">
                <p>
                    Explore the world of tabletop games.
                    @*<a class="btn btn-default" href="">
                        Learn More
                    </a>*@
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.svg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Rate and review the games you've played.
                    @*<a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                        Learn More
                    </a>*@
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner3.svg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Shop around for games you'd like to own.
                    @*<a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525029&clcid=0x409">
                        Learn More
                    </a>*@
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner4.svg" alt="TGN" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Read up on upcoming releases and gaming events.
                    @*<a class="btn btn-default" href="https://www.tabletopgamingnews.com/">
                        Learn More
                    </a>*@
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Games</h2>
        <ul>
            <li>Explore all the games!</li>
            <li>Read game descriptions</li>
            <li>Search games by genre and type</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Rate and Review</h2>
        <ul>
            <li>Register to rate and review games</li>
            <li>Browse our reviews to help you find games you like</li>
           
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Shop</h2>
        <ul>
            <li>Links are provided to online sellers</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Connect</h2>
        <ul>
            <li>Explore upcoming gaming conventions</li>
            <li>Find other gamers in your area</li>
        </ul>
    </div>
</div>
